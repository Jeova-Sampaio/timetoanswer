<h1>PERGUNTAS</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h6>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                  <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" 
                      colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" 
                      style="width: 20px;">
                      #
                    </th>
                  <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" 
                      colspan="1" aria-label="Position: activate to sort column ascending" 
                      style="width: 478px;">
                      <%= translate_attribute(@questions, :description) %>
                  </th>
                  <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" 
                      colspan="1" aria-label="Position: activate to sort column ascending" 
                      style="width: 200px;">
                      <%= translate_attribute(@questions, :subject) %>
                  </th>
                  <th>
                    <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
            <% @questions.each do |question|  %>
                <tr>
                    <td class="text-center"><%= question.id %></td>
                    <td><%= question.description.truncate(70) %></td>
                    <td><%= question.subject.description.truncate(30) %></td>
                    <td style="width: 110px">
                        <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>

                        <%= link_to admins_backoffice_question_path(question), method: :delete, 
                            class:"btn btn-danger btn-circle", 
                            data: { confirm: t('message.confirm_with', item: question.description.truncate(15) ) } do %>
                            <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <%= paginate @questions %>
                </div>
            </div>
        </div>
    </div>
</div>
