<div class="row">
    <div class="col-lg-12">
        <h1 class="page-hearder"><%= action_message %></h1>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <% if @admin.errors.any? %>
                <div class="alert alert-danger alert-dismissable">
                    <button type="buttton" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                    <ul>
                        <% @admin.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>
                <h1><%= @admin.model_name.human %></h1>
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for([ :admins_backoffice, @admin ], local: true) do |f| %>
                        <div class="form-group">
                            <%= f.label :email %>
                            <%= f.text_field :email, 
                                        class:"form-control", 
                                        placeholder: t('placeholder.admin_email') %>
                        </div>

                        <div class="form-group">
                            <%= f.label :password %>
                            <%= f.password_field :password, 
                                        class:"form-control", 
                                        placeholder: t('placeholder.admin_password') %>
                        </div>

                        <div class="form-group">
                            <%= f.label :password_confirmation %>
                            <%= f.password_field :password_confirmation, 
                                        class:"form-control", 
                                        placeholder: t('placeholder.admin_password_confirmation') %>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <%= t('buttons.save') %>
                        </button>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>