<h1>Admins</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= t('message.listing', model: @admins.model_name.human(count: 2)) %></h6>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                  <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" 
                      colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" 
                      style="width: 20px;">
                      #
                    </th>
                  <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" 
                      colspan="1" aria-label="Position: activate to sort column ascending" 
                      style="width: 478px;">
                      <%= translate_attribute(@admins, :email) %>
                  </th>
                  <th>
                    <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
              </tr>
            </thead>
            <tbody>
            <% @admins.each do |admin|  %>
                <tr>
                    <td class="text-center"><%= admin.id %></td>
                    <td><%= admin.email %></td>
                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>

                        <%= link_to admins_backoffice_admin_path(admin), method: :delete, 
                            class:"btn btn-danger btn-circle", 
                            data: { confirm: t('message.confirm_with', item: admin.email.truncate(15) ) } do %>
                            <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <%= paginate @admins %>
                </div>
            </div>
        </div>
    </div>
</div>
