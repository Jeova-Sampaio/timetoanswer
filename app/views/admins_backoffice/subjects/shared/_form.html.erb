<div class="row">
    <div class="col-lg-12">
        <h1 class="page-hearder"><%= action_message %></h1> 
    </div>
</div>

<div class="card shadow mb-4">
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            <div class="panel-body">
                <% if @subject.errors.any? %>
                    <div class="alert alert-danger alert-dismissable">
                        <button type="buttton" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                        <ul>
                            <% @subject.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                    <% end %>
                    <h1><%= @subject.model_name.human %></h1>
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for([ :admins_backoffice, @subject ], local: true) do |f| %>
                            <div class="form-group">
                                <%= f.label :description %>
                                <%= f.text_field :description, 
                                        class:"form-control", 
                                        placeholder: t('placeholder.subject_description') %>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <%= t('buttons.save') %>
                            </button>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>